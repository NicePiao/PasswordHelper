<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xiaopiao.password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新增账户"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/save_account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="√"
            android:textColor="@android:color/white"
            android:textSize="15dp" />
    </RelativeLayout>

    <com.xiaopiao.password.ui.view.FieldItemView
        android:id="@+id/account_filed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:filed_delete_btn_show="false"
        app:filed_title_text="账户名称" />

    <LinearLayout
        android:id="@+id/field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/add_new_field_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="+" />

</LinearLayout>